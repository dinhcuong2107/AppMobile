<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".CTOrdActivity">
        <TextView
            android:id="@+id/text_ct_ord_nameuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="name device"
            android:textColor="#E91E63"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center|bottom">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/ct_ord_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/ct_ord_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/ct_ord_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/text_ct_ord_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="name device"
            android:textColor="#FF0000"/>
        <TextView
            android:id="@+id/text_ct_ord_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="name device"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/ct_ord_cpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="CPU"/>
        <TextView
            android:id="@+id/ct_ord_rom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Rom"/>
        <TextView
            android:id="@+id/ct_ord_ram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Ram"/>
        <TextView
            android:id="@+id/ct_ord_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Chi tiết"/>
        <TextView
            android:id="@+id/ct_ord_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="Địa chỉ"/>
        <TextView
            android:id="@+id/ct_ord_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Thời gian đặt hàng"/>
        <TextView
            android:id="@+id/ct_ord_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Số Lượng"/>
        <TextView
            android:id="@+id/ct_ord_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/purple_500"
            android:text="Thành tiền"/>

        <TextView
            android:id="@+id/ct_ord_stt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Trạng thái"
            android:textColor="@color/teal_700"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/status0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang giao hàng"
                android:textSize="20dp"/>
            <RadioButton
                android:id="@+id/status1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã nhận hàng"
                android:textSize="20dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_update"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_1"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textSize="20dp"/>
    </LinearLayout>

</ScrollView>