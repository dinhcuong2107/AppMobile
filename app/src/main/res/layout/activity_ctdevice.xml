<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CTDeviceActivity"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center|bottom">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/ct_u_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/ct_u_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/ct_u_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/text_ct_u_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="name device"
                android:textColor="#FF0000"/>
            <TextView
                android:id="@+id/text_ct_u_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="name device"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="CPU"
                    android:layout_weight="2"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/text_ct_u_cpu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="name device"
                    android:layout_weight="1"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="Ram"
                    android:layout_weight="2"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/text_ct_u_ram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="name device"
                    android:layout_weight="1"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="Rom"
                    android:layout_weight="2"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/text_ct_u_rom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="name device"
                    android:layout_weight="1"
                    android:textColor="#000000"/>
            </LinearLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/cl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cl1"
                    android:textSize="25dp"/>
                <RadioButton
                    android:id="@+id/cl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cl1"
                    android:textSize="25dp"/>
                <RadioButton
                    android:id="@+id/cl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cl1"
                    android:textSize="25dp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/text_ct_u_ctsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="Đơn giá (VNĐ)"
                    android:layout_weight="2"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/text_ct_u_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="name device"
                    android:layout_weight="1"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="số lượng"
                    android:layout_weight="2"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_giamsl"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:background="@drawable/custom_btn"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/text_ct_u_sl"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#000000"/>

                    <Button
                        android:id="@+id/btn_tangsl"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="+"
                        android:background="@drawable/custom_btn_1"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/text_tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành tiền"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/purple_500"/>
            <EditText
                android:id="@+id/add_ord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edt"
                android:hint="Địa chỉ nhận hàng"
                android:textSize="25dp"/>
            <Button
                android:id="@+id/btn_buy"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_1"
                android:text="Mua"
                android:textAllCaps="false"
                android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_admin"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_ct_device"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center|bottom">
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        tools:ignore="MissingConstraints">
                        <ImageView
                            android:id="@+id/ct_img2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        tools:ignore="MissingConstraints">
                        <ImageView
                            android:id="@+id/ct_img1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        tools:ignore="MissingConstraints">
                        <ImageView
                            android:id="@+id/ct_img3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/edt_ct_namesp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edt"
                        android:hint="Tên sản phẩm"/>
                    <EditText
                        android:id="@+id/edt_ct_companysp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/custom_edt"
                        android:hint="Hãng sản xuất"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="CPU" />
                        <EditText
                            android:id="@+id/edt_ct_cpusp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/custom_edt"
                            android:layout_weight=".75" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Ram" />
                        <EditText
                            android:id="@+id/edt_ct_ramsp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:background="@drawable/custom_edt"
                            android:layout_weight=".78" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Rom" />
                        <EditText
                            android:id="@+id/edt_ct_romsp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/custom_edt"
                            android:layout_weight=".75" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Số Lượng" />
                        <EditText
                            android:id="@+id/edt_ct_slsp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/custom_edt"
                            android:layout_weight=".75" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Màu sắc"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="5"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edt_ct_clsp1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/custom_edt" />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="4"
                                    android:background="#00000000"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layoutcl2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="5"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edt_ct_clsp2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/custom_edt" />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="4"
                                    android:background="#00000000"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layoutcl3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="5"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/edt_ct_clsp3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/custom_edt" />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="4"
                                    android:background="#00000000"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/edt_ct_ctsp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edt"
                            android:hint="Chi tiết"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:weightSum="5"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edt_ct_price_sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Giá"
                                android:background="@drawable/custom_edt" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="4"
                                android:textSize="20dp"
                                android:text="VNĐ"
                                android:background="#00000000"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <RadioButton
                    android:id="@+id/ct_add_spm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản Phẩm mới        "/>
                <RadioButton
                    android:id="@+id/ct_add_spnb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm nổi bật        "/>
                <RadioButton
                    android:id="@+id/ct_add_spsell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm bán chạy        "/>
            </LinearLayout>
            <Button
                android:id="@+id/save_sp"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn"
                android:text="Lưu"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>