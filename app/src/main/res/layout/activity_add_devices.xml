<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".AddDevicesActivity">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/choose_lap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop        "/>
            <RadioButton
                android:id="@+id/choose_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smartphone        "/>
            <RadioButton
                android:id="@+id/choose_pk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phụ kiện        "/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/layout_add_device"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|bottom">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/add_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/add_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/add_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/namesp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edt"
                    android:hint="Tên sản phẩm"/>
                <EditText
                    android:id="@+id/companysp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edt"
                    android:hint="Hãng sản xuất"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="CPU" />
                    <EditText
                        android:id="@+id/cpusp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_edt"
                        android:layout_weight=".75" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Ram" />
                    <EditText
                        android:id="@+id/ramsp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:background="@drawable/custom_edt"
                        android:layout_weight=".78" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Rom" />
                    <EditText
                        android:id="@+id/romsp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_edt"
                        android:layout_weight=".75" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Số Lượng" />
                    <EditText
                        android:id="@+id/slsp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_edt"
                        android:layout_weight=".75" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Màu sắc"
                        android:textSize="20dp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/clsp1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_edt" />
                            <Button
                                android:id="@+id/btn_clsp1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="+"
                                android:layout_weight="4"
                                android:background="@drawable/custom_edt"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutcl2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/clsp2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_edt" />
                            <Button
                                android:id="@+id/btn_clsp2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="+"
                                android:layout_weight="4"
                                android:background="@drawable/custom_edt"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutcl3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="5"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/clsp3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_edt" />
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="4"
                                android:background="#00000000"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/ctsp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edt"
                        android:hint="Chi tiết"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="5"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/price_sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Giá"
                            android:background="@drawable/custom_edt" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="4"
                            android:textSize="20dp"
                            android:text="VNĐ"
                            android:background="#00000000"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <RadioButton
                android:id="@+id/add_spm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản Phẩm mới        "/>
            <RadioButton
                android:id="@+id/add_spnb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm nổi bật        "/>
            <RadioButton
                android:id="@+id/add_spsell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm bán chạy        "/>
        </LinearLayout>
        <Button
            android:id="@+id/add_sp"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn"
            android:text="Đăng bán"/>
    </LinearLayout>
</ScrollView>